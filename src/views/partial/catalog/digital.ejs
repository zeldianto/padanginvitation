<script>
	function filterCategory(category, button) {
		const cards = document.querySelectorAll('.undangan-card');
		const buttons = document.querySelectorAll('.category-buttons .btn-category');

		// Tampilkan atau sembunyikan undangan berdasarkan kategori
		cards.forEach(card => {
			if (category === 'all' || card.classList.contains(category)) {
				card.style.display = 'block';
			} else {
				card.style.display = 'none';
			}
		});

		// Refresh AOS untuk update animasi
		AOS.refresh();

		// Atur tombol aktif
		buttons.forEach(btn => btn.classList.remove('active')); // Hapus status aktif di semua tombol
		button.classList.add('active'); // Tambahkan status aktif ke tombol yang diklik
	}
</script>

